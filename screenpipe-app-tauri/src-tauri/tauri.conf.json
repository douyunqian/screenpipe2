{
  "$schema": "https://schema.tauri.app/2.0/schema.json",
  "productName": "screenpipe-app",
  "version": "0.44.4",
  "build": {
    "before-build-command": "",
    "before-dev-command": "",
    "frontend-dist": "./dist"
  },
  "allowlist": {
    "all": true
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "identifier": "com.screenpipe.app",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "security": {
    "csp": "default-src 'self'; script-src 'self'"
  },
  "windows": [
    {
      "title": "Screenpipe",
      "width": 800,
      "height": 600,
      "center": true,
      "fullscreen": false,
      "resizable": true
    }
  ]
}
