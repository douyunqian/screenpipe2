{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../dist",
    "distDir": "../dist",
    "binaryPath": "./target/x86_64-pc-windows-msvc/release/screenpipe-x86_64-pc-windows-msvc.exe" // 显式指定二进制路径
  },
  "package": {
    "productName": "screenpipe-x86_64-pc-windows-msvc", // 与二进制名称一致
    "version": "0.44.4"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "targets": "msi",
      "identifier": "com.screenpipe.app",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'"
    },
    "windows": [
      {
        "title": "Screenpipe",
        "width": 800,
        "height": 600,
        "center": true,
        "fullscreen": false,
        "resizable": true
      }
    ]
  }
}
